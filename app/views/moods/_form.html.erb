<div class="container">
  <%= simple_form_for @mood do |p| %>
    <div class="mood-form">
    <%= p.input :rating, as: :radio_buttons, collection: [['1', '😢'], ['2', '💩'], ['3', '😡'], ['4','😐'], ['5', '☺️'], ['6', '😀']], label_method: :second, value_method: :first, wrapper_html: {class: 'radio-buttons' }  %>
    </div>
    <%= p.input :journal_entry, wrapper_html: { class: 'h1' } %>
    <%= p.submit %>
  <% end %>
</div>

