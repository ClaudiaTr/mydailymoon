<div class="container">

  <div class="date-today">
      <h1> <%= @mood.date.strftime('%A') %></h1>
      <h1> <%= @mood.date.strftime(' %B %d, %Y') %></h1>
  </div>

  <div class="emoji">
    <h1>Today you are feeling:</h1>
    <%= @emoji %>
  </div>

  <div class="journal">
    <h1>Your daily thoughts</h1>
    <h2><em>A space for self reflection...</em></h2>
      <div class="journal-entry">
      <%= @mood.journal_entry %>
      </div>
  </div>
  <%= link_to "Edit", edit_mood_path(@mood) %>
</div>
