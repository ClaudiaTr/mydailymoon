<div class="form-inputs">
  <div class="date-navigation">
    <% if params[:date] %>
      <%= link_to mood_path(date: (params[:date].to_date - 1)) do %>
        <i class="fas fa-arrow-left"> </i>
      <% end %>
      <h1 class="date-today my-3"><%= params[:date].to_date.strftime("%b %d") %></h1>
      <%= link_to mood_path(date: (params[:date].to_date + 1)) do %>
        <i class="fas fa-arrow-right"> </i>
      <% end %>
    <% end %>
  </div>
  <!-- If you try to create empty Mood errors pops up -->
  <% if params.dig(:date)&.to_date <= Date.today %>
    <!-- Problem persists without conditional (no params[:date] to :new) -->
    <%= render "form", mood: @mood %>
  <% else %>
    <p style="text-align: center; margin: 50px 0"><em>You can't really predict your mood in the future, can you? ðŸ”®</em></p>
  <% end %>
  <%= render "tabs" %>
</div>
