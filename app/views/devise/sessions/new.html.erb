<div class="container-log_in page">
  <span class="emoji moon" role="img" aria-label="moon phases" width="160px"></span>

  <h2>Daily Moon</h2>
  <%= image_tag "moon2waxingcrescent.png", alt: "Waxing Crescent", style: "width: 24px;" %>
  <%= image_tag "moon3firstquarter.png", alt: "First Quarter", style: "width: 24px;" %>
  <%= image_tag "moon4waxinggibbous.png", alt: "Waxing Gibbous", style: "width: 24px;" %>
  <%= image_tag "moon5full.png", alt: "Full Moon", style: "width: 24px;" %>
  <%= image_tag "moon6waninggibbous.png", alt: "Waning Gibbous", style: "width: 24px;" %>
  <%= image_tag "moon7lastquarter.png", alt: "Last Quarter", style: "width: 24px;" %>
  <%= image_tag "moon8waningcrescent.png", alt: "Waning Crescent", style: "width: 24px;" %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-gradient" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
